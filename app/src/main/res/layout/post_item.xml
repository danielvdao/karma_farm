<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/placeholder"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:id="@+id/score_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:orientation="vertical">

        <TextView
            android:id="@+id/post_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#ff5700"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <RelativeLayout
            android:id="@+id/comments"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/commment_icon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:paddingTop="5dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_question_answer_grey600_48dp"
                android:background="@null"
                android:filterTouchesWhenObscured="false" />

            <TextView
                android:id="@+id/num_comments"
                android:clickable="true"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/commment_icon"
                android:layout_alignBottom="@id/commment_icon"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="42dp"/>


        </RelativeLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/score_board"
        android:textColor="#336699"
        android:clickable="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="left"
        android:layout_toRightOf="@id/thumb"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/post_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/post_title"
        android:layout_toRightOf="@id/thumb"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />



</RelativeLayout>